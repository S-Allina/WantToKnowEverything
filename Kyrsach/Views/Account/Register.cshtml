@model Kyrsach.Models.RegisterModel




<head>
    <link rel="stylesheet" href="~/css/StyleLoginRegIn.css" />
</head>
<div>
    <div class="box">
        <div class="col-12 text-center align-self-center py-5">
                <div class="card-3d-wrap mx-auto">
                    <div class="square" style="--i: 0"></div>
                    <div class="square" style="--i: 1"></div>
                    <div class="square" style="--i: 2"></div>
                    <div class="square" style="--i: 3"></div>
                    <div class="square" style="--i: 4"></div>
                <div class="card-3d-wrapper">
                    <div class="card-front">

                        <div>
                            <div class="center-wrap" style="width:100%!important">
                               
                                <form method="post" asp-controller="Account" asp-action="Register" style="    display: flex;
    flex-direction: column;
    align-items: center;">
                                    <h4 class="title1">Регистрация</h4>
                                    <div asp-validation-summary="All" class="text-danger"></div>
                                    <div class="flexInputForm">
                                    <div class="inputBox">
                                        <input asp-for="FirstName" type="text" placeholder="Имя" />
                                        <span asp-validation-for="FirstName" class="text-danger"></span>
                                    </div>
                                    <div class="inputBox">
                                        <input asp-for="LastName" placeholder="Фамилия" />
                                        <span asp-validation-for="LastName" class="text-danger"></span>
                                    </div>
                                    </div>

                                    <div class="flexInputForm">
                                    <div class="inputBox">
                                        <input asp-for="Name" placeholder="Логин" />
                                        <span asp-validation-for="Name" class="text-danger"></span>
                                    </div>
                                    <div class="inputBox">
                                        <input asp-for="Email" type="email" placeholder="email" />
                                        <span asp-validation-for="Email" class="text-danger"></span>
                                    </div>
                                    </div>

                                    <div class="flexInputForm">
                                      <div class="inputBox">
                                        <input asp-for="Password" type="password" placeholder="Пароль" />
                                        <span asp-validation-for="Password" class="text-danger"></span>
                                    </div>
                                    <div class="inputBox">
                                        <input asp-for="PasswordConfirm" type="password" placeholder="Повторите пароль" />
                                        <span asp-validation-for="PasswordConfirm" class="text-danger"></span>
                                    </div>
                                    </div>
                                    <div class="flexInputForm">
                                    <div class="inputBox">
                                        <input asp-for="NumberStudentBook"  type="number" placeholder="Номер зачётки" />
                                        <span asp-validation-for="NumberStudentBook" class="text-danger"></span>
                                    </div>
                                        <button type="submit" class="btn" name="send">
                                            <strong class="strongBtn">Регистрация</strong>
                                            <div id="container-stars">
                                                <div id="stars"></div>
                                            </div>
                                            <div id="glow">
                                                <div class="circle"></div>
                                                <div class="circle"></div>
                                            </div>
                                        </button>
                                    </div>
                                   
                                    <p>
                                        Уже есть аккаунт? <a asp-controller="Account" style="display:inline;text-decoration:underline" asp-action="Login">Вход</a>
                                    </p>
                                </form>
                            </div>
                            <div class="Text1">
                                <div class="text-danger">
                                <p class="title">WELCOME<br /></p>
                                <p class="tex">
                                </p>
                                </div>
                            </div>

                        </div>
                    </div>
                </div>
            </div>


            

        </div>
    </div>
</div>
    @section Scripts {
        @{
            await Html.RenderPartialAsync("_ValidationScriptsPartial");
        }
    }
