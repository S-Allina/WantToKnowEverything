@{
    ViewData["Title"] = "Home Page";
}

<div class="Home">


    <div id="loader" style="display: none;">
        <div id="myPartial">
            @Html.Partial("Loader")
        </div>
    </div>
    <h1 class="display-4 Home__Titile">Добро пожаловать</h1>
    <section style="position:relative" class="loader">

        <div class="slider" style="--i:0">
        </div>
        <div class="slider" style="--i:1">
        </div>
        <div class="slider" style="--i:2">
        </div>
        <div class="slider" style="--i:3">
        </div>
